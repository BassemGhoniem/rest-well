    },
    "version": "0.0.1"
  },
  "servers": [
    {
      "url": "https://petstore.swagger.io/v2"
    },
    {
      "url": "http://petstore.swagger.io/v2"
    }
  ],
  "tags": [
    {
      "name": "coffee-machine",
      "description": "Everything about Coffee Machines"
    },
    {
      "name": "coffee-pod",
      "description": "Everything about Coffee Pods"
    }
  ],
  "paths": {
    "/coffe-machine/filter": {
      "get": {
        "tags": [
          "coffee-machine"
        ],
        "summary": "Filter Coffee Machines",
        "description": "Finds Coffee Machines by product type and water line, in the case of there's no params, data returned without filtering",
        "parameters": [
          {
            "name": "product_type",
            "in": "query",
            "description": "Product type that need to be considered for filter",
            "schema": {
              "type": "string",
              "default": "COFFEE_MACHINE_LARGE",
              "enum": [
                "COFFEE_MACHINE_LARGE",
                "COFFEE_MACHINE_SMALL",
                "ESPRESSO_MACHINE"
              ]
            }
          },
          {
            "name": "water_line_compatible",
            "in": "query",
            "description": "Water line compitable or not",
            "schema": {
              "type": "boolean",
              "default": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "content": {}
          }
        }
      }
    },
    "/coffe-pod/filter": {
      "get": {
        "tags": [
          "coffee-pod"
        ],
        "summary": "Filter Coffee Pods",
        "description": "Finds Coffee Pods by product type, coffee flavor, and pack size, in the case of there's no params, data returned without filtering",
        "parameters": [
          {
            "name": "product_type",
            "in": "query",
            "description": "Product type that need to be considered for filter",
            "schema": {
              "type": "string",
              "default": "COFFEE_POD_LARGE",
              "enum": [
                "COFFEE_POD_LARGE",
                "COFFEE_POD_SMALL",
                "ESPRESSO_POD"
              ]
            }
          },
          {
            "name": "coffee_flavor",
            "in": "query",
            "description": "Coffee flavor that need to be considered for filter",
            "schema": {
              "type": "string",
              "default": "COFFEE_FLAVOR_VANILLA",
              "enum": [
                "COFFEE_FLAVOR_VANILLA",
                "COFFEE_FLAVOR_CARAMEL",
                "COFFEE_FLAVOR_PSL",
                "COFFEE_FLAVOR_MOCHA",
                "COFFEE_FLAVOR_HAZELNUT"
              ]
            }
          },
          {
            "name": "pack_size",
            "in": "query",
            "description": "Pack size that need to be considered for filter",
            "schema": {
              "type": "number",
              "default": 1,
              "enum": [
                1,
                3,
                5,
                7
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value",
            "content": {}
          }
        }
      }
    }
  }
}