{
  "name": "rest-well",
  "version": "0.0.1",
  "description": "Simple rest APIs example",
  "main": "src/server.js",
  "scripts": {
    "lint": "eslint --ignore-path .gitignore .",
    "depcheck": "npm-check",
    "pretest": "npm run lint",
    "test": "mocha './test/**/*Spec.js' --timeout=10000 --exit",
    "coverage": "nyc npm run test",
